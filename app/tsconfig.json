{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "../dist/renderer",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@types/*": ["types/*"]
    }
  },
  "include": ["**/*.ts", "../types/**/*.ts"],
  "exclude": ["node_modules", "../src", "../dist"]
}
